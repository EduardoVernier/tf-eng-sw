<core:FragmentDefinition xmlns="sap.m" id="addTrack"
	xmlns:core="sap.ui.core">

	<TableSelectDialog noDataText="No Products Found"
		title="Selecione a pista" confirm="onAddTrackConfirm"
		multiSelect="true">
		<ColumnListItem>
			<cells>
				<ObjectIdentifier title="Pista de Chão Batido" />
				<Text text="P219879" />
				<Text text="Livre" />
				<Button width="1rem" type="Transparent" icon="sap-icon://calendar" />
			</cells>
		</ColumnListItem>

		<ColumnListItem>
			<cells>
				<ObjectIdentifier title="Pista de Velocidade Máxima" />
				<Text text="P212992" />
				<Text text="Ocupado" />
				<Button width="1rem" type="Transparent" icon="sap-icon://calendar" />
			</cells>
		</ColumnListItem>
		<ColumnListItem>
			<cells>
				<ObjectIdentifier title="Pista de Asfalto Irreguar" />
				<Text text="P212900" />
				<Text text="Ocupado" />
				<Button width="1rem" type="Transparent" icon="sap-icon://calendar" />
			</cells>
		</ColumnListItem>

		<columns>
			<Column >
				<header>
					<Label text="Nome da Pista" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" hAlign="Right" >
				<header>
					<Label text="Id da Pista"  />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" hAlign="Right">
				<header>
					<Label text="Status da Pista" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" hAlign="Right">
				<header>
					<Label text="Disponibilidade" />
				</header>
			</Column>

		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>