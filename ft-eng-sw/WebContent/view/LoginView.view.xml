<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:commons="sap.ui.commons" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	controllerName="com.sap.randon.view.LoginView" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:me="sap.me">
	<Page title="Login">

		<customHeader>
			<Bar>
				<contentLeft>
				</contentLeft>
				<contentMiddle>
					<Text class="sap-font-open-sans" text="Portal do Campo de Provas Randon - Login" />
				</contentMiddle>
				<contentRight>
					<Image src="{i18n>SapLogoPath}" width="auto" height="50%" />
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<VBox height="3rem" />
			<FlexBox direction="Column" alignItems="Center">

				<Input placeholder="UsuÃ¡rio" height="3rem" width="20rem" class="loginInput"
					id="user" />
				<Input type="Password" placeholder="Senha" width="20rem"
					height="3rem" class="loginInput" id="password" />
				<Button text="Entrar" press="handleLogon" width="20rem"
					class="logonButton" />
				<Button text="Registrar" press="handleRegister" width="20rem" />
			</FlexBox>
		</content>

	</Page>
</core:View>